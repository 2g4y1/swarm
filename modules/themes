if [ "$theme" = "smint" ]; then
    export NEWT_COLORS="
    root=black,black
    border=cyan,black
    window=black,black

    # shadow color
    shadow=black,black

    # titel color
    title=cyan,black

    # infotext - choose option
    textbox=cyan,black

    # Menu Color fg=text bg=bg
    listbox=cyan,black
    # Active Menu Color - fg=text c after leaving
    actlistbox=black,cyan
    actsellistbox=black,cyan

    # ok cancel button
    button=black,cyan
    compactbutton=cyan,black
    "
fi
