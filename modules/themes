#!/bin/bash
source $configs/swarm.cfg

if [ "$theme" = "default" ]; then
    export NEWT_COLORS="
    root=blue,blue
    window=white
    border=black
    textbox=white
    button=black,red
    "
fi

if [ "$theme" = "light" ]; then
    export NEWT_COLORS="
    root=white,white
    window=white
    border=black
    textbox=white
    button=black,red
    "
fi

if [ "$theme" = "dark" ]; then
    export NEWT_COLORS="
    root=black,black
    border=red,black
    window=black,black

    # shadow color
    shadow=black,black

    # titel color
    title=red,black

    # infotext - choose option
    textbox=red,black

    # Menu Color fg=text bg=bg
    listbox=red,black
    # Active Menu Color - fg=text c after leaving
    actlistbox=black,red

    # ok cancel button
    button=black,red
    compactbutton=red,black
    "
fi