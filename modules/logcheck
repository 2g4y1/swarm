#!/bin/bash
if [ ! -d "$swarmdir/log" ]; then
    sudo mkdir -p $swarmdir/log
else
    if [ ! -f "$swarmlog" ]; then
        {
            echo "statuscounter=0"
            echo "restartdt="
            echo "pruningmultiplier=0"
            echo "pruningdt="
        } > $swarmlog
    fi
fi
if [ -f "$swarmdir/log/watchdog.log" ]; then
    rm -rf $swarmdir/log/watchdog.log
fi
if [ -f "$swarmdir/log/pruning.log" ]; then
    rm -rf $swarmdir/log/pruning.log
fi
