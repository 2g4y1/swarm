#!/bin/bash
if [ ! -f "/etc/profile.d/00-swarm.sh" ]; then
    cat /var/lib/swarm/templates/00-swarm.sh > /etc/profile.d/00-swarm.sh
    if (grep -Fxq "alias swarm='sudo /var/lib/swarm/swarm'" /root/.bashrc); then
        echo "alias swarm='sudo /var/lib/swarm/swarm'" >> /root/.bashrc
    fi
    whiptail --title "Welcome to SWARM!" --msgbox "The alias \"swarm\" has been added to your system.\n\nThe system must be restarted to complete the process!" 10 65
    sudo reboot
fi