#!/bin/bash
if [ ! -f "/etc/profile.d/00-swarm.sh" ]; then
    cat $templates/00-swarm.sh > /etc/profile.d/00-swarm.sh
    if (grep -Fxq "alias swarm='sudo /var/lib/swarm/swarm'" /root/.bashrc); then
        echo "alias swarm='sudo /var/lib/swarm/swarm'" >> /root/.bashrc
    fi
    if (whiptail --title "Welcome to SWARM! [v$version]" --yesno "The alias \"swarm\" has been added to your system!\n\nWould you like to reboot your system now?" 10 65); then
        sudo reboot
    fi
fi