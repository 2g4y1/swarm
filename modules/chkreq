#!/bin/bash
if [ $(id -u) -ne 0 ]; then
    whiptail --title "Welcome to SWARM! [v$version]" --msgbox "Please run SWARM with sudo or as root" 8 65
    exit 0
fi

osv="$(uname -m)"
if [ "$osv" = "aarch64" ] || [ "$osv" = "x86_64" ]; then
    ospassed=true
    unset ospassed
else
    whiptail --title "Welcome to SWARM! [v$version]" --msgbox "Error. 32Bit system detected! Please only use a 64bit OS." 8 65
    exit 0
fi