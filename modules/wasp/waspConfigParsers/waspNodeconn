#!/bin/bash

parser="$(jq '.nodeconn.address' $waspHome/config.json)"
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$waspNodeconn" ] && [ ! -z "$waspNodeconn" ] 2>/dev/null; then
    sudo jq '.nodeconn.address = "'$waspNodeconn'"' $waspHome/config.json|sponge $waspHome/config.json
    restartWasp=true
fi