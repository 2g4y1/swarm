#!/bin/bash

# Upater for Hornet.cfg
    sudo sed -i 's/release=.*/release='$release'/' $configs/hornet.cfg
    sudo sed -i 's/network=.*/network='$network'/' $configs/hornet.cfg
    sudo sed -i 's/pow=.*/pow='$pow'/' $configs/hornet.cfg
    sudo sed -i 's/neighborport=.*/neighborport='$neighborport'/' $configs/hornet.cfg
    sudo sed -i 's/autopeeringport=.*/autopeeringport='$autopeeringport'/' $configs/hornet.cfg
    sudo sed -i 's/pruning=.*/pruning='$pruning'/' $configs/hornet.cfg
    sudo sed -i 's/pruningdelay=.*/pruningdelay='$pruningdelay'/' $configs/hornet.cfg
    sudo sed -i 's/seed=.*/seed='$seed'/' $configs/hornet.cfg

# Upater for Nginx.cfg
    sudo sed -i 's/domain=.*/domain=\"'$domain'\"/' $configs/nginx.cfg
    sudo sed -i 's/nodeport=.*/nodeport='$nodeport'/' $configs/nginx.cfg
    sudo sed -i 's/dashuser=.*/dashuser=\"'$dashuser'\"/' $configs/nginx.cfg
    sudo sed -i 's/dashpw=.*/dashpw=\"'$dashpw'\"/' $configs/nginx.cfg

# Upater for Watchdog.cfg
    sudo sed -i 's/autoupdate=.*/autoupdate='$autoupdate'/' $configs/watchdog.cfg
    sudo sed -i 's/checksync=.*/checksync='$checksync'/' $configs/watchdog.cfg
    sudo sed -i 's/maxlmi=.*/maxlmi='$maxlmi'/' $configs/watchdog.cfg
    sudo sed -i 's/logpruning=.*/logpruning='$logpruning'/' $configs/watchdog.cfg
    sudo sed -i 's/logsize=.*/logsize='$logsize'/' $configs/watchdog.cfg