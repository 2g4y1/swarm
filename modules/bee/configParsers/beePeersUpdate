#!/bin/bash

if [ z "$beePeer0" ]; then
    unsetBeePeer0="#"
fi
if [ z "$beePeer1" ]; then
    unsetBeePeer1="#"
fi
if [ z "$beePeer2" ]; then
    unsetBeePeer2="#"
fi
if [ z "$beePeer3" ]; then
    unsetBeePeer3="#"
fi
if [ z "$beePeer4" ]; then
    unsetBeePeer4="#"
fi
if [ z "$beePeer5" ]; then
    unsetBeePeer5="#"
fi

sed -i '/\[network\.peering\]/,/\[protocol\]/{//!d}' $beeDir/config.toml
sed -i 's/\[network\.peering\]/\[network\.peering\]\n'$unsetBeePeer0'address  = "'$beePeer0'"\n'$unsetBeePeer0'alias    = "'$beePeerAlias0'"\n'$unsetBeePeer1'address  = "'$beePeer1'"\'$unsetBeePeer1'nalias    = "'$beePeerAlias1'"\n'$unsetBeePeer2'address  = "'$beePeer2'"\n'$unsetBeePeer2'alias    = "'$beePeerAlias2'"\n'$unsetBeePeer3'address  = "'$beePeer3'"\n'$unsetBeePeer3'alias    = "'$beePeerAlias3'"\n'$unsetBeePeer4'address  = "'$beePeer4'"\n'$unsetBeePeer4'alias    = "'$beePeerAlias4'"\n'$unsetBeePeer5'address  = "'$beePeer5'"\n'$unsetBeePeer5'alias    = "'$beePeerAlias5'"\n/g' $beeDir/config.toml
restartBee=true