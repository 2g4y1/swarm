#!/bin/bash

parser=$(sed -n '/interval_synced/p' $beeDir/config.toml | awk '{ print $3 }')
if [ "$parser" -ne "$beeSnapshotInterval" ] > /dev/null 2>&1; then
    sudo sed -i 's~^interval_synced.*~interval_synced   = '$beeSnapshotInterval'~g' $beeDir/config.toml
    restartBee=true
    newBeeSnapshotInterval=true
fi