#!/bin/bash

if [ "$beeVersion" = "[0-9].[3-9].[0-9]" ] || [ "$beeVersion" = "[0-9].[3-9].[0-9]-rc[4-9]" ]; then
    parser="$(jq '.dashboard.auth.passwordSalt' $beeHome/config.chrysalis-$beeNetwork.json)"
    parser=$(echo $parser | tr -d '"')
    if [ "$parser" != "$beePasswordSalt" ]; then
        sudo jq '.dashboard.auth.passwordSalt = "'$beePasswordSalt'"' $beeHome/config.chrysalis-$beeNetwork.json|sponge $beeHome/config.chrysalis-$beeNetwork.json
        restartBee=true
    fi
else
    parser=$(sed -n '/^password_salt/p' $beeHome/config.chrysalis-$beeNetwork.toml | awk '{ print $3 }')
    if [ "$parser" != "\"$beePasswordSalt\"" ]; then
        sudo sed -i 's~^password_salt.*~password_salt   = "'$beePasswordSalt'"~g' $beeHome/config.chrysalis-$beeNetwork.toml
        restartBee=true
    fi
fi

unset parser
