#!/bin/bash

if [ "$beeVersion" = "[0-9].[3-9].[0-9]" ] || [ "$beeVersion" = "[0-9].[3-9].[0-9]-rc[4-9]" ]; then
    parser="$(jq '.dashboard.auth.passwordHash' $beeHome/config.chrysalis-$beeNetwork.json)"
    parser=$(echo $parser | tr -d '"')
    if [ "$parser" != "$beePasswordHash" ]; then
        sudo jq '.dashboard.auth.passwordHash = "'$beePasswordHash'"' $beeHome/config.chrysalis-$beeNetwork.json|sponge $beeHome/config.chrysalis-$beeNetwork.json
        restartBee=true
    fi
else
    parser=$(sed -n '/^password_hash/p' $beeHome/config.chrysalis-$beeNetwork.toml | awk '{ print $3 }')
    if [ "$parser" != "\"$beePasswordHash\"" ]; then
        sudo sed -i 's~^password_hash.*~password_hash   = "'$beePasswordHash'"~g' $beeHome/config.chrysalis-$beeNetwork.toml
        restartBee=true
    fi
fi
unset parser