#!/bin/bash

parser=$(sed -n '/^user/p' $beeHome/config.chrysalis-$beeNetwork.toml | awk '{ print $3 }')
parser=$(echo $parser | tr -d '"')

if [ "$parser" != "$beeUsername" ]; then
    sudo sed -i 's~^user            =.*~user            = "'$beeUsername'"~g' $beeHome/config.chrysalis-$beeNetwork.toml
    restartBee=true
    newBeeUsername=true
fi

unset parser