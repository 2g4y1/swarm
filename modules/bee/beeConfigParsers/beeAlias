#!/bin/bash

parser=$(sed -n '/^alias/p' $beeHome/config.chrysalis-$beeNetwork.toml | head -n 1)
if [ "$parser" != "alias      = \"$beeAlias\"" ]; then
    sudo sed -i "4s~^alias.*~alias      = \"$beeAlias\"~g" $beeHome/config.chrysalis-$beeNetwork.toml
    restartBee=true
    newBeeAlias=true
fi







