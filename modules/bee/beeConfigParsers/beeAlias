#!/bin/bash

parser=$(sed -n '/^alias/p' $beeHome/config.chrysalis-$beeNetwork.toml | head -n 1 | awk '{print $3 }' | tr -d '"')
if [ "$parser" != "$beeAlias" ]; then
    sudo sed -i "3s~^alias.*~alias      = \"$beeAlias\"~g" $beeHome/config.chrysalis-$beeNetwork.toml
    restartBee=true
    newBeeAlias=true
fi
