#!/bin/bash

parser=$(sed -n '/^bind_address/p' $beeHome/config.chrysalis-$beeNetwork.toml | sed -n 1p | awk '{ print $3 }')
if [ "$parser" != "\"/ip4/0.0.0.0/tcp/$beeGossipPort\"" ]; then
    sudo sed -i 's~^bind_address            = '$parser'~bind_address            = "/ip4/0.0.0.0/tcp/'$beeGossipPort'"~g' $beeHome/config.chrysalis-$beeNetwork.toml
    restartBee=true
fi