#!/bin/bash

IFS=', ' read -r -a ARRAYbeeConfigs <<< "$beeConfigs"

for beeConfig in "${ARRAYbeeConfigs[@]}"
do
    parser=$(sed -n '/^bind_address/p' $beeHome/config.chrysalis-$beeConfig.toml | sed -n 2p | awk '{ print $3 }')
    if [ "$parser" != "\"/ip4/0.0.0.0/tcp/$beeRestApiPort\"" ]; then
        sudo sed -i 's~^bind_address          = '$parser'~bind_address          = "/ip4/0.0.0.0/tcp/'$beeRestApiPort'"~g' $beeHome/config.chrysalis-$beeConfig.toml
        restartBee=true
    fi
done
unset ARRAYbeeConfigs
unset beeConfig
