#!/bin/bash

parserBefore=$(sed -n '/\[dashboard\]/,/\[dashboard\.auth\]/p' $beeHome/config.chrysalis-$beeNetwork.toml)
sudo sed -i 's~^bind_address    = "/ip4/0.0.0.0/tcp/8081"~bind_address    = "/ip4/0.0.0.0/tcp/8082"~' $beeHome/config.chrysalis-$beeNetwork.toml
parserAfter=$(sed -n '/\[dashboard\]/,/\[dashboard\.auth\]/p' $beeHome/config.chrysalis-$beeNetwork.toml)

if [ "$parserBefore" != "$parserAfter" ]; then
    restartBee=true
fi

unset parserBefore
unset parserAfter