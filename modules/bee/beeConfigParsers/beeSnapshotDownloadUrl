#!/bin/bash

getSnapshotUrls="https://cdn.tanglebay.com/snapshots/mainnet/"

if ! grep -Ex "$getSnapshotUrls" $beeHome/config.toml
then
    sed -i 's~    \"https:\/\/chrysalis-dbfiles\.iota\.org/snapshots\/hornet\/\"~    \"https:\/\/chrysalis-dbfiles\.iota\.org\/snapshots\/hornet\/\",\n    \"https:\/\/cdn\.tanglebay\.com\/snapshots\/mainnet\/\"~g' $beeHome/config.toml
fi