                                beePeerAddress=$(whiptail --inputbox "\nPlease enter the IPv6 address for \"peer $beePeerNumber\" or select cancel" 10 65 $beePeerAddress --title "Bee - Peer$beePeerNumber Address" 3>&1 1>&2 2>&3)
