                        )
                        case $CHOICE in
                            "1)")
                                beePeerAddress=$(echo $currentBeePeer | cut -c 6- | cut -f1 -d "/")
                                beePeerAddress=$(whiptail --inputbox "\nPlease enter the domain for \"peer $beePeerNumber\" or select cancel" 10 65 $beePeerAddress --title "Bee - Peer$beePeerNumber Address" 3>&1 1>&2 2>&3)
