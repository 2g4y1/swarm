                                            if [ "$currentBeePeer" != "$beePeer" ]; then
                                                sudo sed -i 's~^beePeer'$beePeerNumber'=.*~beePeer'$beePeerNumber'="'$beePeer'"~g' $swarmConfigs/bee.cfg
                                                restartBee=true
                                            fi
                                        fi
                                    fi
                                fi
                                unset beePeerNumber
                                unset currentBeePeer
                                unset beePeerAddress
                                unset beePeerPort
