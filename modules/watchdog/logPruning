#!/bin/bash

if [ "$logPruning" = "true" ]; then
    if [ -f "$logs/swarm.log" ]; then
        currentLogSize="$(wc -c $logs/swarm.log | awk '{print $1}')"
        let logsize=$logSize*1000000
        if [ $currentLogSize -gt $logSize ]; then
            if [ -f "$logs/swarm.log.tar.gz" ]; then
                sudo rm -rf $logs/swarm.log.tar.gz
            fi
            sudo tar -czf $logs/swarm.log.tar.gz $logs/swarm.log
            echo -n "" > $logs/swarm.log
        fi
    fi
fi