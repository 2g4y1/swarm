#!/bin/bash

if [ "$setHornetEnablePlugins" = "true" ]; then
    hornetPlugins=$hornetEnablePlugins
fi
if [ "$setHornetDisablePlugins" = "true" ]; then
    hornetPlugins=$hornetDisablePlugins
fi

### PLUGINS ###

# Autopeering
if [[ $hornetPlugins = *autopeering* ]]; then
    hornetAutopeering=ON
else
    hornetAutopeering=OFF
fi

# MQTT
if [[ $hornetPlugins = *mqtt* ]]; then
    hornetMqtt=ON
else
    hornetMqtt=OFF
fi

# Spammer
if [[ $hornetPlugins = *spammer* ]]; then
    hornetSpammer=ON
else
    hornetSpammer=OFF
fi

# Faucet
if [[ $hornetPlugins = *faucet* ]]; then
    hornetFaucet=ON
else
    hornetFaucet=OFF
fi

# Warpsync
if [[ $hornetPlugins = *warpsync* ]]; then
    hornetWarpsync=ON
else
    hornetWarpsync=OFF
fi

unset hornetPlugins