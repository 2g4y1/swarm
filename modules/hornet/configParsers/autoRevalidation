#!/bin/bash

IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

for hornetConfig in "${ARRAYhornetConfigs[@]}"
do
    parser="$(jq '.db.autoRevalidation' $hornetDir/$hornetConfig.json)"
    if [ "$parser" != "$dbAutoRevalidation" ]; then
        sudo jq '.db.autoRevalidation = '$dbAutoRevalidation'' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
        restartNode=true
    fi
done
unset ARRAYhornetConfigs
unset hornetConfig