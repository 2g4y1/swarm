#!/bin/bash


if [ -n "$inbound" ] && [ "$inbound" -gt 0 ] 2>/dev/null; then
    IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

    for hornetConfig in "${ARRAYhornetConfigs[@]}"
    do
        parser="$(jq '.network.autopeering.inboundPeers' $hornetDir/$hornetConfig.json)"
        if [ "$parser" != "$inbound" ] ; then
            sudo -u $node jq '.network.autopeering.inboundPeers = '$inbound'' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
        fi
    done
    unset ARRAYhornetConfigs
    unset hornetConfig
fi