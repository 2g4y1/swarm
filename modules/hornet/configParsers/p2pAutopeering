#!/bin/bash

IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

for hornetConfig in "${ARRAYhornetConfigs[@]}"
do
    parser=$(jq '.p2p.autopeering.bindAddress' $hornetDir/$hornetConfig.json)
    if [ "$parser" != "\"0.0.0.0:$hornetAutopeeringPort\"" ] && [ $hornetAutopeeringPort -eq $hornetAutopeeringPort ] && [ "$hornetAutopeeringPort" -gt 0 ] 2>/dev/null; then
        sudo jq '.p2p.autopeering.bindAddress = "0.0.0.0:'$hornetAutopeeringPort'"' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
        restartHornet=true
    fi
done
unset ARRAYhornetConfigs
unset hornetConfig
