#!/bin/bash
if [ ! -z "$hornetPasswordHash" ]; then
    IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

    for hornetConfig in "${ARRAYhornetConfigs[@]}"
    do
        parser="$(jq '.dashboard.auth.passwordHash' $hornetDir/$hornetConfig.json)"
        if [ "\"$hornetPasswordHash\"" != "$parser" ]; then
            sudo jq '.dashboard.auth.passwordHash = "'$hornetPasswordHash'"' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
        fi
    done
fi
unset ARRAYhornetConfigs
unset hornetConfig