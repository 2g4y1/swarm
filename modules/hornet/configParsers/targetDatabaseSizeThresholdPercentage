#!/bin/bash
if [ "$pruning" = "true" ]; then
    IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

    for hornetConfig in "${ARRAYhornetConfigs[@]}"
    do
        parser="$(jq '.pruning.size.targetDatabaseSizeThresholdPercentage' $hornetDir/$hornetConfig.json)"
        if [ "\"$parser\"" != "$targetDatabaseSizeThresholdPercentage" ]; then
            sudo jq '.pruning.size.targetDatabaseSizeThresholdPercentage = '$targetDatabaseSizeThresholdPercentage'' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
        fi
    done
    unset ARRAYhornetConfigs
    unset hornetConfig
fi