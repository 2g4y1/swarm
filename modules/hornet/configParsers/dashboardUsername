#!/bin/bash
if [ ! -z "$hornetUsername" ]; then
    IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

    for hornetConfig in "${ARRAYhornetConfigs[@]}"
    do
        parser="$(jq '.dashboard.auth.username' $hornetDir/$hornetConfig.json)"
        if [ "\"$hornetUsername\"" != "$parser" ]; then
            sudo jq '.dashboard.auth.username = "'$hornetUsername'"' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
            restartHornet=true
            newHornetUsername=true
        fi
    done
fi
unset ARRAYhornetConfigs
unset hornetConfig