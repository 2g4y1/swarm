#!/bin/bash

if [ -z "$hornetPruningPercentage" ]; then
    pruningPercentage=5
else
    hornetPruningPercentage=$(echo ${hornetPruningPercentage%.*})
fi

if [ "$hornetPruning" = "true" ]; then
    IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

    for hornetConfig in "${ARRAYhornetConfigs[@]}"
    do
        parser="$(jq '.pruning.size.thresholdPercentage' $hornetDir/$hornetConfig.json)"
        if [ "$parser" != "$hornetPruningPercentage" ]; then
            sudo jq '.pruning.size.thresholdPercentage = '$hornetPruningPercentage'' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
            restartHornet=true
        fi
    done
    unset ARRAYhornetConfigs
    unset hornetConfig
fi
