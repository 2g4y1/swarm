#!/bin/bash
if [ $pruningPercentage -ne $pruningPercentage ]; then
    pruningPercentage=5
    sudo sed -i 's/^pruningPercentage=.*/pruningPercentage=5/' $configs/hornet.cfg
fi

if [ "$pruning" = "true" ]; then
    IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

    for hornetConfig in "${ARRAYhornetConfigs[@]}"
    do
        parser="$(jq '.pruning.size.thresholdPercentage' $hornetDir/$hornetConfig.json)"
        if [ $parser -ne $pruningPercentage ]; then
            sudo jq '.pruning.size.thresholdPercentage = '$pruningPercentage'' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
            restartHornet=true
        fi
    done
    unset ARRAYhornetConfigs
    unset hornetConfig
fi