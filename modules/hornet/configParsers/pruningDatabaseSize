#!/bin/bash
if [ "$hornetPruning" = "true" ]; then
    if [ -d "$hornetDir/${hornetNetwork}db" ]; then
        getDiskSize=$(df -h $hornetDir/${hornetNetwork}db | awk '{print $2}')
        getDiskSize=$(echo $getDiskSize | awk '{print $2}')
        diskSize=${getDiskSize//[!0-9]/}
        if [ -z "$pruningDatabaseSize" ]; then
            hornetPruningDatabaseSize=$diskSize
        else
            hornetPruningDatabaseSize=${hornetPruningDatabaseSize//[!0-9]/}
        fi
        let bufferSize=$diskSize-$pruningDatabaseSize
        if [ $bufferSize -lt 15 ]; then
            let hornetPruningDatabaseSize=$diskSize-15
            sudo sed -i 's/^hornetPruningDatabaseSize=.*/hornetPruningDatabaseSize='$hornetPruningDatabaseSize'/' $configs/hornet.cfg
        fi

        IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

        for hornetConfig in "${ARRAYhornetConfigs[@]}"
        do
            parser="$(jq '.pruning.size.targetSize' $hornetDir/$hornetConfig.json)"
            if [ "$parser" != "\"${hornetPruningDatabaseSize}GB\"" ]; then
                sudo jq '.pruning.size.targetSize = "'$hornetPruningDatabaseSize'GB"' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
                restartHornet=true
            fi
        done
        unset ARRAYhornetConfigs
        unset hornetConfig
    fi
fi