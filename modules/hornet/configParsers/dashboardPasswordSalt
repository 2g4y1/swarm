#!/bin/bash
if [ ! -z "$hornetPasswordSalt" ]; then
    IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

    for hornetConfig in "${ARRAYhornetConfigs[@]}"
    do
        parser="$(jq '.dashboard.auth.passwordSalt' $hornetDir/$hornetConfig.json)"
        if [ "\"$hornetPasswordSalt\"" != "$parser" ]; then
            sudo jq '.dashboard.auth.passwordSalt = "'$hornetPasswordSalt'"' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
        fi
    done
fi
unset ARRAYhornetConfigs
unset hornetConfig