#!/bin/bash

IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

for hornetConfig in "${ARRAYhornetConfigs[@]}"
do
    parser="$(jq '.restAPI.jwtAuth.salt' $hornetDir/$hornetConfig.json)"
    if [ "\"$hornetJwtAuthSalt\"" != "$parser" ]; then
        if [ ! -z "$hornetJwtAuthSalt" ] 2>/dev/null; then
            sudo jq '.restAPI.jwtAuth.salt = "'$hornetJwtAuthSalt'"' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
            restartHornet=true
        fi
    fi
done
unset ARRAYhornetConfigs
unset hornetConfig