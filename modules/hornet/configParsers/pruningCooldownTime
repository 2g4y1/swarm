#!/bin/bash
if [ "$hornetPruning" = "true" ]; then
    pruningCooldownTime=${pruningCooldownTime//[!0-9]/}

    IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

    for hornetConfig in "${ARRAYhornetConfigs[@]}"
    do
        parser="$(jq '.pruning.size.cooldownTime' $hornetDir/$hornetConfig.json)"
        if [ "$parser" != "\"${hornetPruningCooldownTime}m\"" ]; then
            sudo jq '.pruning.size.cooldownTime = "'$hornetPruningCooldownTime'm"' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
            restartHornet=true
        fi
    done
    unset ARRAYhornetConfigs
    unset hornetConfig
fi