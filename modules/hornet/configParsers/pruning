#!/bin/bash

IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

for hornetConfig in "${ARRAYhornetConfigs[@]}"
do
    parser="$(jq '.pruning.enabled' $hornetDir/$hornetConfig.json)"
    if [ "$parser" != "$pruning" ]; then
        if [ "$pruning" = "true" ] || [ "$pruning" = "false" ]; then
            sudo -u $node jq '.pruning.enabled = '$pruning'' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
        fi
    fi
done
unset ARRAYhornetConfigs
unset hornetConfig