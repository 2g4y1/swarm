#!/bin/bash

IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

for hornetConfig in "${ARRAYhornetConfigs[@]}"
do
    if [ -n "$neighborPort" ] && [ "$neighborPort" -ge 0 ] 2>/dev/null; then
        sudo jq '.p2p.bindMultiAddresses = "/ip4/0.0.0.0/tcp/'$neighborPort'"' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
        sudo jq '.p2p.bindMultiAddresses |= .+ "/ip6/::/tcp/'$neighborPort'"' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
    fi
done
unset ARRAYhornetConfigs
unset hornetConfig
