#!/bin/bash

if [ -n "$hornetUnknownPeersLimit" ] && [ "$hornetUnknownPeersLimit" -ge 0 ] 2>/dev/null; then
    IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"
    for hornetConfig in "${ARRAYhornetConfigs[@]}"
    do
        parser="$(jq '.p2p.gossip.unknownPeersLimit' $hornetDir/$hornetConfig.json)"
        if [ "$parser" != "$hornetUnknownPeersLimit" ]; then
            sudo jq '.p2p.gossip.unknownPeersLimit = '$hornetUnknownPeersLimit'' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
            restartHornet=true
        fi
    done
    unset ARRAYhornetConfigs
    unset hornetConfig
fi