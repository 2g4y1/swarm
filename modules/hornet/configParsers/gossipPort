#!/bin/bash

IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

for hornetConfig in "${ARRAYhornetConfigs[@]}"
do
    if [ -n "$hornetGossipPort" ] && [ "$hornetGossipPort" -gt 0 ] 2>/dev/null; then
        sudo jq '.p2p.bindMultiAddresses = ["/ip4/0.0.0.0/tcp/'$hornetGossipPort'"]' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
        sudo jq '.p2p.bindMultiAddresses |= .+ ["/ip6/::/tcp/'$hornetGossipPort'"]' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
    fi
done
unset ARRAYhornetConfigs
unset hornetConfig
