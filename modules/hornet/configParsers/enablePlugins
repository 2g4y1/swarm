#!/bin/bash

IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"
IFS=', ' read -r -a ARRAYenablePlugins <<< "$enablePlugins"

for hornetConfig in "${ARRAYhornetConfigs[@]}"
do
    sudo -u $node jq '.node.enablePlugins |= []' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
    for enablePlugin in "${ARRAYenablePlugins[@]}"
    do
        sudo -u $node jq '.node.enablePlugins |= .+ ["'$enablePlugin'"]' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
    done
done
unset ARRAYhornetConfigs
unset ARRAYenablePlugins
unset hornetConfig
unset enablePlugin