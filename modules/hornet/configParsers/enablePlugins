#!/bin/bash

IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"
IFS=', ' read -r -a ARRAYhornetEnablePlugins <<< "$hornetEnablePlugins"

for hornetConfig in "${ARRAYhornetConfigs[@]}"
do
    sudo jq '.node.enablePlugins |= []' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
    if [ ! -z "$hornetEnablePlugins" ]; then
        for hornetEnablePlugin in "${ARRAYhornetEnablePlugins[@]}"
        do
            sudo jq '.node.enablePlugins |= .+ ["'$hornetEnablePlugin'"]' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
        done
    fi
done
unset ARRAYhornetConfigs
unset ARRAYhornetEnablePlugins
unset hornetConfig
unset hornetEnablePlugin