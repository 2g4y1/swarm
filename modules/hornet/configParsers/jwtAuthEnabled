#!/bin/bash

IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

for hornetConfig in "${ARRAYhornetConfigs[@]}"
do
    parser="$(jq '.restAPI.jwtAuth.enabled' $hornetDir/$hornetConfig.json)"
    if [ "$jwtAuthEnabled" = "true" ] || [ "$jwtAuthEnabled" = "false" ]; then
        if [ "$parser" != "$jwtAuthEnabled" ]; then
            sudo jq '.restAPI.jwtAuth.enabled = '$jwtAuthEnabled'' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
            restartHornet=true
            echo "jwtAuth=true" >> /root/update.log
        fi
    fi
done

unset ARRAYhornetConfigs
unset hornetConfig