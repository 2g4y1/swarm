#!/bin/bash

if [ "$powWorkers" -ge 1 ] 2>/dev/null; then
    IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"
    for hornetConfig in "${ARRAYhornetConfigs[@]}"
    do
        parser="$(jq '.restAPI.powWorkerCount' $hornetDir/$hornetConfig.json)"
        if [ "$parser" != "$powWorkers" ]; then
            sudo jq '.restAPI.powWorkerCount = '$powWorkers'' $hornetDir/$hornetConfig.json|sponge $hornetDir/$hornetConfig.json
        fi
    done
    unset ARRAYhornetConfigs
    unset hornetConfig
fi
