#!/bin/bash

parser="$(jq '.p2p.autopeering.runAsEntryNode' $hornetHome/$hornetNetwork.json)"
if [ "$hornetRunAsEntryNode" = "true" ] || [ "$hornetRunAsEntryNode" = "false" ]; then
    if [ "$parser" != "$hornetRunAsEntryNode" ]; then
        sudo jq '.p2p.autopeering.runAsEntryNode = '$hornetRunAsEntryNode'' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
        restartHornet=true
    fi
fi