#!/bin/bash

parser=$(jq '.p2p.autopeering.bindAddress' $hornetHome/$hornetNetwork.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "0.0.0.0:$hornetAutopeeringPort" ] && [ $hornetAutopeeringPort -eq $hornetAutopeeringPort ] && [ "$hornetAutopeeringPort" -gt 0 ] 2>/dev/null; then
    sudo jq '.p2p.autopeering.bindAddress = "0.0.0.0:'$hornetAutopeeringPort'"' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
    restartHornet=true
fi