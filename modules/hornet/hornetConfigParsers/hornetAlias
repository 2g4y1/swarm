#!/bin/bash

parser="$(jq '.node.alias' $hornetHome/$hornetNetwork.json)"
parser=$(echo $parser | tr -d '"')
if [ "$hornetAlias" != "$parser" ]; then
    if [ ! -z "$hornetAlias" ] 2>/dev/null; then
        sudo jq --arg hornetAlias "$hornetAlias" '.node.alias = ($hornetAlias)' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
        restartHornet=true
        newHornetAlias=true
    fi
fi