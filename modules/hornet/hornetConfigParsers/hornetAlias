#!/bin/bash

IFS=', ' read -r -a ARRAYhornetConfigs <<< "$hornetConfigs"

for hornetConfig in "${ARRAYhornetConfigs[@]}"
do
    parser="$(jq '.node.alias' $hornetHome/$hornetConfig.json)"
    if [ "\"$hornetAlias\"" != "$parser" ]; then
        if [ ! -z "$hornetAlias" ] 2>/dev/null; then
            hornetNodeAlias=$(echo $hornetAlias | tr ' ' '-')
            sudo jq '.node.alias = "'$hornetAlias'"' $hornetHome/$hornetConfig.json|sponge $hornetHome/$hornetConfig.json
            restartHornet=true
            newHornetNodeAlias=true
        fi
    fi
done
unset ARRAYhornetConfigs
unset hornetConfig