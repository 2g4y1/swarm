#!/bin/bash

parser="$(jq '.snapshots.intervalSynced' $hornetHome/$hornetNetwork.json)"
if [ ! -z "$parser" ]; then
    jq 'del(.snapshots.intervalSynced)' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
fi
parser="$(jq '.snapshots.interval' $hornetHome/$hornetNetwork.json)"
if [ "$hornetSnapshotInterval" != "$parser" ]; then
    sudo jq '.snapshots.interval = '$hornetSnapshotInterval'' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
    restartHornet=true
    newHornetSnapshotInterval=true
fi