#!/bin/bash

if [ -n "$hornetGossipPort" ] && [ "$hornetGossipPort" -gt 0 ] 2>/dev/null; then
    sudo jq '.p2p.bindMultiAddresses = ["/ip4/0.0.0.0/tcp/'$hornetGossipPort'"]' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
    sudo jq '.p2p.bindMultiAddresses |= .+ ["/ip6/::/tcp/'$hornetGossipPort'"]' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
fi