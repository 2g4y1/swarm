#!/bin/bash

useHornetDisablePlugins=true
source $hornetModules/hornetPlugins

IFS=', ' read -r -a ARRAYhornetDisablePlugins <<< "$hornetDisablePlugins"

parser="$(jq '.node.disablePlugins' $hornetHome/$hornetNetwork.json)"
parser="$(echo $parser | tr -d '[]" ')"
if [ "$parser" != "$hornetDisablePlugins" ]; then
    sudo jq '.node.disablePlugins |= []' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
    for hornetDisablePlugin in "${ARRAYhornetDisablePlugins[@]}"
    do
        sudo jq '.node.disablePlugins |= .+ ["'$hornetDisablePlugin'"]' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
    done
    restartHornet=true
fi
unset ARRAYhornetDisablePlugins
unset hornetDisablePlugin
unset useHornetDisablePlugins
