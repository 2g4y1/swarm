#!/bin/bash

if [ -n "$hornetUnknownPeersLimit" ] && [ "$hornetUnknownPeersLimit" -ge 0 ] 2>/dev/null; then
    parser="$(jq '.p2p.gossip.unknownPeersLimit' $hornetHome/$hornetNetwork.json)"
    if [ "$parser" != "$hornetUnknownPeersLimit" ]; then
        sudo jq '.p2p.gossip.unknownPeersLimit = '$hornetUnknownPeersLimit'' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
        restartHornet=true
    fi
fi