#!/bin/bash

useHornetEnablePlugins=true
source $hornetModules/hornetPlugins

IFS=', ' read -r -a ARRAYhornetEnablePlugins <<< "$hornetEnablePlugins"

parser="$(jq '.node.enablePlugins' $hornetHome/$hornetNetwork.json)"
parser="$(echo $parser | tr -d '[]" ')"
if [ "$parser" != "$hornetEnablePlugins" ]; then
    sudo jq '.node.enablePlugins |= []' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
    for hornetEnablePlugin in "${ARRAYhornetEnablePlugins[@]}"
    do
        sudo jq '.node.enablePlugins |= .+ ["'$hornetEnablePlugin'"]' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
    done
    restartHornet=true
fi

unset ARRAYhornetEnablePlugins
unset hornetEnablePlugin
unset useHornetEnablePlugins