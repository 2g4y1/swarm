#!/bin/bash

parser="$(jq '.restAPI.jwtAuth.salt' $hornetHome/$hornetNetwork.json)"
parser=$(echo $parser | tr -d '"')
if [ "$hornetApiJwtSalt" != "$parser" ]; then
    if [ ! -z "$hornetApiJwtSalt" ] 2>/dev/null; then
        sudo jq '.restAPI.jwtAuth.salt = "'$hornetApiJwtSalt'"' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
        restartHornet=true
        newHornetApiJwtToken=true
    fi
fi