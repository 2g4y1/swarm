#!/bin/bash
if [ "$hornetPruning" = "true" ]; then
    pruningCooldownTime=${pruningCooldownTime//[!0-9]/}

    parser="$(jq '.pruning.size.cooldownTime' $hornetHome/$hornetNetwork.json)"
    parser=$(echo $parser | tr -d '"')
    if [ "$parser" != "${hornetPruningCooldownTime}m" ]; then
        sudo jq '.pruning.size.cooldownTime = "'$hornetPruningCooldownTime'm"' $hornetHome/$hornetNetwork.json|sponge $hornetHome/$hornetNetwork.json
        restartHornet=true
    fi
fi