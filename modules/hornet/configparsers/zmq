#!/bin/bash

IFS=', ' read -r -a ARRAYhornetconfigs <<< "$hornetconfigs"

for hornetconfig in "${ARRAYhornetconfigs[@]}"
do
    parser="$(jq '.zmq.bindAddress' $hornetdir/$hornetconfig.json)"
    if [ "$parser" = "\"localhost\"" ]; then
        sudo jq '.zmq.bindAddress = "0.0.0.0:5556"' $hornetdir/$hornetconfig.json|sponge $hornetdir/$hornetconfig.json
    fi
done
unset ARRAYhornetconfigs
unset hornetconfig
