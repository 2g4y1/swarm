#!/bin/bash

IFS=', ' read -r -a ARRAYhornetconfigs <<< "$hornetconfigs"

for hornetconfig in "${ARRAYhornetconfigs[@]}"
do
    parser="$(jq '.network.autopeering.seed' $hornetdir/$hornetconfig.json)"
    if [ "\"$seed\"" != "$parser" ] && [ "$seed" != "" ]; then
        sudo jq '.network.autopeering.seed = '\"$seed\"'' $hornetdir/$hornetconfig.json|sponge $hornetdir/$hornetconfig.json
    fi
done
unset ARRAYhornetconfigs
unset hornetconfig
