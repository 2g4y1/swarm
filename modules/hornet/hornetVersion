#!/bin/bash

# Local node version
if [ -f "/usr/bin/hornet" ]; then
    hornetVersion=$(hornet -v | awk '{ print $2 }')
fi

# Latest Hornet version
if [ "$hornetRelease" = "stable" ]; then
    latestHornetVersion="$(curl -s -X GET "https://cdn.tanglebay.com/github/version" -H  "accept: application/json"|jq -r '.data.node.hornet.stable' 2> /dev/null | tr -d '"')"
fi
if [ "$hornetRelease" = "testing" ]; then
    latestHornetVersion="$(curl -s -X GET "https://cdn.tanglebay.com/github/version" -H  "accept: application/json"|jq -r '.data.node.hornet.testing' 2> /dev/null | tr -d '"')"
fi

# Replace var if empty
if [ -z "$latestHornetVersion" ] || [ "$latestHornetVersion" = "null" ]; then
    latestHornetVersion=$hornetVersion
fi
