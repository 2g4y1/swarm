#!/bin/bash
source $configs/proxy.cfg

proxyStatus=$(systemctl show -p ActiveState --value nginx)

if [ -f "/usr/sbin/nginx" ]; then
    # OUTPUT
    whiptail --title "Proxy Info [v$version]" --msgbox "Webserver: $proxyStatus\n\nHornet: https://$domain:$hornetApiPort\n\nGoShimmer Dashboard: https://$domain:$goshimmerApiPort\nGoShimmer WebAPI: https://$domain:$goshimmerApiPort/webapi" 14 65
else
    whiptail --title "Proxy Info [v$version]" --msgbox "No reverse proxy installed!" 8 65
fi