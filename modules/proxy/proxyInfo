#!/bin/bash
source $configs/proxy.cfg

proxyStatus=$(systemctl show -p ActiveState --value nginx)

if [ -f "/usr/sbin/nginx" ]; then
    # OUTPUT
    whiptail --title "Proxy Info [v$version]" --msgbox "Webserver: $proxyStatus\n\nHornet (Dashboard/API)\nhttps://$domain:$hornetApiPort\n\nGoShimmer Dashboard\nhttps://$domain:$goshimmerApiPort\n\nGoShimmer WebAPI\nhttps://$domain:$goshimmerApiPort/webapi" 18 65
else
    whiptail --title "Proxy Info [v$version]" --msgbox "No reverse proxy installed!" 8 65
fi