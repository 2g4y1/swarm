#!/bin/bash
source $swarmConfigs/proxy.cfg

if [ -f "/usr/sbin/nginx" ]; then
    proxyStatus=$(systemctl show -p ActiveState --value nginx)
    hr="\n\n#############################################################"

    if [ ! -z "$proxyHornetDomain" ] && [ ! -z "$proxyHornetPort" ]; then
        proxyHornetUrl="\n\nHornet (Dashboard/API)\nhttps://$proxyHornetDomain:$proxyHornetPort"
    fi
    if [ ! -z "$proxyBeeDomain" ] && [ ! -z "$proxyBeePort" ]; then
        proxyBeeUrl="\n\nBee (Dashboard/API)\nhttps://$proxyBeeDomain:$proxyBeePort"
    fi
    if [ ! -z "$proxyGoshimmerDomain" ] && [ ! -z "$proxyGoshimmerPort" ]; then
        proxyGoshimmerUrl="\n\nGoShimmer (Dashboard/API)\nhttps://$proxyGoshimmerDomain:$proxyGoshimmerPort"
    fi
    if [ ! -z "$proxyWaspDomain" ] && [ ! -z "$proxyWaspPort" ]; then
        proxyWaspUrl="\n\nWASP (Dashboard/API)\nhttps://$proxyWaspDomain:$proxyWaspPort"
    fi

    # OUTPUT
    whiptail --title "Proxy Info [v$version]" --msgbox "Webserver: $proxyStatus$hr$proxyHornetUrl$proxyBeeUrl$proxyGoshimmerUrl$proxyWaspUrl" 25 65
else
    whiptail --title "Proxy Info [v$version]" --msgbox "Reverse proxy not installed!" 8 65
fi