#!/bin/bash
source $swarmConfigs/proxy.cfg

proxyStatus=$(systemctl show -p ActiveState --value nginx)

if [ -f "/usr/sbin/nginx" ]; then
    # OUTPUT
    whiptail --title "Proxy Info [v$version]" --msgbox "Webserver: $proxyStatus\n\nHornet (Dashboard/API)\nhttps://$proxyHornetDomain:$proxyHornetPort\n\nBee (Dashboard/API)\nhttps://$proxyBeeDomain:$proxyBeePort\n\nGoShimmer (Dashboard/API)\nhttps://$proxyGoshimmerDomain:$proxyGoshimmerPort\n\nWASP (Dashboard/API)\nhttps://$proxyWaspDomain:$proxyWaspPort" 25 65
else
    whiptail --title "Proxy Info [v$version]" --msgbox "No reverse proxy installed!" 8 65
fi