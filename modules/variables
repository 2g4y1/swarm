# SWARM
swarmDir="/var/lib/swarm"
configs="/var/lib/swarm/configs"
modules="/var/lib/swarm/modules"
plugins="/var/lib/swarm/plugins"
templates="/var/lib/swarm/templates"
logs="/var/lib/swarm/logs"

# WATCHDOG
