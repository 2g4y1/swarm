#!/bin/bash

if [ -z "$goshimmerWebapiAuthHash" ]; then
    if [ ! -d "/etc/nginx/goshimmer" ]; then
        sudo mkdir -p /etc/nginx/goshimmer
    else
        goshimmerWebapiAuthHash=$(sudo htpasswd -bnB $goshimmerWebapiAuthUsername $goshimmerWebapiAuthPassword)
        sudo htpasswd -bcB /etc/nginx/goshimmer/.htpasswd_webapi $goshimmerWebapiAuthUsername $goshimmerWebapiAuthPassword
        sudo sed -i 's/^goshimmerWebapiAuthHash=.*/goshimmerWebapiAuthHash="'$goshimmerWebapiAuthHash'"/' $configs/goshimmer.cfg
        if [ -f "/usr/sbin/nginx" ]; then
            sudo systemctl reload nginx > /dev/null 2>&1
        fi
    fi
else
    goshimmerWebapiAuthHash=$(sudo htpasswd -bnB $goshimmerWebapiAuthUsername $goshimmerWebapiAuthPassword)
    sudo htpasswd -bcB /etc/nginx/goshimmer/.htpasswd_webapi $goshimmerWebapiAuthUsername $goshimmerWebapiAuthPassword
    sudo sed -i 's/^goshimmerWebapiAuthHash=.*/goshimmerWebapiAuthHash="'$goshimmerWebapiAuthHash'"/' $configs/goshimmer.cfg
    if [ -f "/usr/sbin/nginx" ]; then
        sudo systemctl reload nginx > /dev/null 2>&1
    fi
fi
