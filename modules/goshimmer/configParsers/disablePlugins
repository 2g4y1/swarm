#!/bin/bash

IFS=', ' read -r -a ARRAYdisablePlugins <<< "$goshimmerDisablePlugins"

    sudo jq '.node.disablePlugins |= []' $goshimmerDir/config.json|sponge $goshimmerDir/config.json
    if [ ! -z "$goshimmerDisablePlugins" ]; then
        for disablePlugin in "${ARRAYdisablePlugins[@]}"
        do
            sudo jq '.node.disablePlugins |= .+ ["'$disablePlugin'"]' $goshimmerDir/config.json|sponge $goshimmerDir/config.json
        done
    fi

unset ARRAYdisablePlugins
unset disablePlugin