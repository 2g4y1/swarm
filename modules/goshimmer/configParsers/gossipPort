#!/bin/bash

parser="$(jq '.gossip.port' $goshimmerDir/config.json)"
if [ $goshimmerGossipPort -eq $goshimmerGossipPort ] && [ $parser -ne $goshimmerGossipPort ] && [ "$goshimmerGossipPort" -gt 0 ] 2>/dev/null; then
    sudo jq '.gossip.port = '$goshimmerGossipPort'' $goshimmerDir/config.json|sponge $goshimmerDir/config.json
    restartGoshimmer=true
fi