#!/bin/bash

IFS=', ' read -r -a ARRAYenablePlugins <<< "$goshimmerEnablePlugins"

    sudo jq '.node.enablePlugins |= []' $goshimmerDir/config.json|sponge $goshimmerDir/config.json
    for enablePlugin in "${ARRAYenablePlugins[@]}"
    do
        sudo jq '.node.enablePlugins |= .+ ["'$enablePlugin'"]' $goshimmerDir/config.json|sponge $goshimmerDir/config.json
        restartNode=true
    done

unset ARRAYenablePlugins
unset enablePlugin