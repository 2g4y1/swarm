#!/bin/bash
# Check if plugins are enabled and get latest stats
if [ -f "$swarmLog" ]; then
    sudo crontab -l | grep -q $plugins/watchdog && watchdog=active || watchdog=inactive
    if [ -f "$log/watchdog.log" ]; then
        restartDate="$(cat $log/watchdog.log)"
    else
        restartDate=N/A
    fi
    sudo crontab -l | grep -q $plugins/dbpruner && dbpruner=active || dbpruner=inactive
    if [ -f "$log/pruning.log" ]; then
        pruningDate="$(cat $log/pruning.log)"
    else
        pruningDate=N/A
    fi
fi