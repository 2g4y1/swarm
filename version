#!/bin/bash

version=0.5.6

############################################################################################################################################################

if [ "$1" = "-v" ] || [ "$1" = "-version" ]; then
    echo "SWARM v$version"
    exit 0
fi

currentBranch=$( cd $swarmDir ; git rev-parse --abbrev-ref HEAD )
if [ "$currentBranch" = "develop" ]; then
    commit=$( cd $swarmDir ; git rev-parse --short HEAD )
    version="$version-$commit"
fi