#!/bin/bash
source /var/lib/swarm/modules/variables
source $configs/hornet.cfg
source $configs/swarm.cfg

# Check if SWARM log exist
if [ ! -f "$swarmlog" ]; then
    source $modules/logcheck
else
    source $swarmlog
fi

# Get Service Status
status="$(systemctl show -p ActiveState --value hornet)"

# Update check
source $modules/watchdog/autoupdater

# Service check
source $modules/watchdog/statuschecker

# Check sync
source $modules/watchdog/syncchecker

# Log Pruning
source $modules/watchdog/logpruner


exit 0
