#!/bin/bash
source /var/lib/swarm/modules/variables
source $configs/hornet.cfg
source $configs/watchdog.cfg

# Get Service Status
status="$(systemctl show -p ActiveState --value hornet)"

# Update check
source $modules/autoupdater

# Service check
source $modules/watchdog/statuschecker

# Check sync
source $modules/watchdog/syncchecker

# DB Pruner Module
source $modules/watchdog/dbpruner

# Log Pruning
source $modules/watchdog/logpruner


exit 0
