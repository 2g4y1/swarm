[Unit]
Description=GoShimmer
After=network.target

[Service]
WorkingDirectory=/var/lib/goshimmer
User=goshimmer
TasksMax=infinity
KillSignal=SIGTERM
TimeoutStopSec=infinity
ExecStart=/var/lib/goshimmer/goshimmer -c config
SyslogIdentifier=GOSHIMMER
Restart=on-failure
RestartSec=1200

[Install]
WantedBy=multi-user.target
Alias=goshimmer.service